# 生产环境配置文件
# 注意：敏感信息应该通过GitHub Secrets管理

# 应用配置
APP_NAME=视频学习管理器
APP_VERSION=1.0.0
ENVIRONMENT=production

# 数据库配置
DATABASE_URL=sqlite:///./data/video_learning.db

# Redis配置
REDIS_URL=redis://redis:6379/0
CELERY_BROKER_URL=redis://redis:6379/0
CELERY_RESULT_BACKEND=redis://redis:6379/0

# 文件存储配置
UPLOAD_DIR=/var/video-learning-manager/uploads
VIDEO_DIR=/var/video-learning-manager/videos
AUDIO_DIR=/var/video-learning-manager/audios
THUMBNAIL_DIR=/var/video-learning-manager/thumbnails

# AI模型配置
WHISPER_MODEL=large-v3
WHISPER_DEVICE=cuda
WHISPER_COMPUTE_TYPE=float16

# 安全配置 (生产环境应该设置强密码)
SECRET_KEY=your-production-secret-key-change-this
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# 视频处理配置
MAX_VIDEO_SIZE=500000000  # 500MB
MAX_PROCESSING_TIME=1800  # 30分钟
SUPPORTED_PLATFORMS=douyin,weixin,bilibili,youtube

# GitHub配置
GITHUB_REPOSITORY=your-username/video-learning-manager

# 通知配置 (可选)
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK